<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".NewUpdateActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/new_version_app_bg"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1dp"
        android:background="@drawable/new_version_app_dialog_bottom_bg"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="发现新版本：微信v1.0.0（16.80MB）"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="15"
            android:text="1. 修复一些bug\n2. 修复一些bug\n2. 修复一些bug\n2. 修复一些bug\n2. 修复一些bug\n2. 修复一些bug\n2. 修复一些bug\n2. 修复一些bug\n2. 修复一些bug\n2. 修复一些bug\n2. 修复一些bug\n2. 修复一些bug\n2. 修复一些bug\n2. 修复一些bug"
            android:textColor="#666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/buttonCommit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/new_version_app_button_bg"
            android:gravity="center"
            android:text="升级"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>